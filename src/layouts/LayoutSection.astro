---
interface Props {
  innerPx?: string;
  innerPy?: string;
}

const { innerPx, innerPy } = Astro.props;

const innerClasses = [innerPx || 'px-6', innerPy || 'py-6'];
---

<section class="flex w-full flex-col items-center justify-center px-4 py-3">
  <div
    class:list={[
      'inner-container w-full max-w-2xl rounded-lg text-center elevation-2',
      innerClasses,
    ]}
  >
    <slot />
  </div>
</section>

<style>
  .inner-container {
    background-color: rgb(255, 255, 255, 0.94);
    /* background-color: rgb(255, 255, 255); */
  }
</style>
